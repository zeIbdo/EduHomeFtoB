@model List<Course>

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sliders Table</h4>
            <div class="table-responsive">
                <td>
                    <a asp-controller="course" asp-action="create" class="btn btn-primary">Create</a>
                </td>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Duration</th>
                            <th>Fee</th>
                            <th>Language</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Duration</td>
                                <td>@item.Fee</td>
                                <td>@item.Language</td>
                                <td>@item.Category.Name</td>
                                <td>
                                    <a asp-controller="course" asp-action="update" asp-route-id="@item.Id" class="btn btn-primary">Update </a>
                                </td>
                                <td>
                                    <a asp-controller="course" asp-action="delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>